    <h1 class="mx-auto text-center"> Vous pouvez créer un évènement sur cette page</h1>

    <div class="mx-auto text-center">

        <%= form_tag url_for(action: 'create'), method: "post" do %>

          <%= label_tag 'Titre' %><br />
          <%= text_field_tag 'title' %>
          <br /> <br />

          <%= label_tag 'Description' %><br />
          <%= text_area_tag 'description'  %>
          <br /> <br />

          <%= label_tag 'Ville' %><br />
          <%= text_field_tag 'location'  %>
          <br /> <br />

          <%= label_tag 'Date' %><br />
          <%= date_field_tag 'start_date'  %>
          <br /> <br />

          <%= label_tag 'Durée' %><br />
          <%= number_field_tag 'duration'  %>
          <br /> <br />

          <%= label_tag 'Prix' %><br />
          <%= number_field_tag 'price'  %>
          <br /> <br />

          <%= submit_tag "Créer un évènement" %>

        <% end %>
    </div>
