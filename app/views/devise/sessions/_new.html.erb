<html>
  <head>
    <title>Connexion</title>
    <link rel="stylesheet" href="bootstrap.min.css">
  </head>
  <body>


    <div class="fluid-container text-center mx-auto mt-3 mb-3">

      <h2>Connectez-vous</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => 35 %>
        </div>

        <div class="field mb-2">
          <%= f.label :Mot_de_passe %><br />
          <%= f.password_field :Mot_de_passe, autocomplete: "Mot de passe", :size => 35 %>
        </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mb-2">
              <%= f.check_box :remember_me %>
              <%= f.label :se_souvenir_de_moi %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

          <div class="actions mt-2  mb-2">
            <%= f.submit "Connexion", :class => "btn btn-success" %>
          </div>
      <% end %>

    </div>

  </body>
</html>
